FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

setFormat raw;

surfaceFormat raw;

interpolationScheme cell;//cellPatchConstrained;


fields
(
    U
    epsilon
    k
    wallShearStress
    //yPlus
    p
    //wallGradU
);

sets
(

  axial_profile
  {
      type        midPoint;
      axis        distance;

      start       (0.0  0.0  0.0000001);
      end         (8.8  0.0  0.0000001);
  }

  radial_profile
  {
      type        midPoint;
      axis        z;

      start       (8.8  0.0  0.0);
      end         (8.8  0.0  0.022);
  }
);

